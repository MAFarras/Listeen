<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicbackground">

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="#E0CACA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_image"
            android:layout_width="133dp"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="88dp"
            android:src="@drawable/logomusic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="106dp"
            android:text="Listeen"
            android:textColor="#000000"
            android:textSize="30sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Luser"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="42dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="User" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Lemail"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Luser"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="42dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Lpassword"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lemail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/password_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:inputType="textPassword" />


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/register_button"
            android:layout_width="108dp"
            android:layout_height="29dp"
            android:layout_below="@+id/Lpassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="107dp"
            android:background="#03E8FD"
            android:text="Register" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="80dp"
            android:text="Already have an account?"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/login2_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_button"
            android:layout_alignStart="@+id/login_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="167dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="35dp"
            android:text="Login"
            android:textColor="#0099FF" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>