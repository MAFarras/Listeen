<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="162dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:text="Nama Lagu"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Nama Album"
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_album"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:text="Nama Artist"
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <Button
            android:id="@+id/play_song"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_below="@+id/song_artist"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/play"
            android:onClick="playBtnClick"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/stop_song"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:layout_below="@+id/song_artist"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/play_song"
            android:background="@drawable/stop2"
            android:textColor="#ffff" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>